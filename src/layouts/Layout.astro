    <style is:global>
      /* Additional global styles */
      html {
        font-family: 'Manrope', sans-serif;
        overflow-x: hidden; /* Prevent horizontal overflow */
        width: 100%;
        max-width: 100vw;
        scroll-behavior: smooth;
      }
      body {
        overflow-x: hidden; /* Prevent horizontal overflow */
        width: 100%;
        max-width: 100vw;
        line-height: 1.5;
      }
      
      /* Improve focus styles for accessibility */
      a:focus, button:focus, input:focus, textarea:focus, select:focus {
        outline: 3px solid #E25E3E;
        outline-offset: 2px;
      }
      
      /* Improve link contrast for accessibility */
      a {
        text-decoration-thickness: 2px;
        text-underline-offset: 2px;
      }
      
      /* Improve selection contrast */
      ::selection {
        background-color: #E25E3E;
        color: white;
      }
      
      /* Skip to content for accessibility */
      .skip-to-content {
        position: absolute;
        left: -9999px;
        top: auto;
        width: 1px;
        height: 1px;
        overflow: hidden;
      }
      
      .skip-to-content:focus {
        position: fixed;
        top: 0;
        left: 0;
        width: auto;
        height: auto;
        padding: 10px;
        border: 3px solid black;
        background: white;
        z-index: 9999;
        color: black;
        font-weight: bold;
      }
    </style>
    <link rel="apple-touch-icon" href="/images/matt-logo-v8-black.png" sizes="180x180" />
    <link rel="manifest" href="/manifest.json" />
  </head>
  <body class="bg-background text-text min-h-screen flex flex-col">
    <a href="#main-content" class="skip-to-content">Skip to content</a>
    <SiteBanner />
    <FloatingMenu />
    <main class="flex-grow">
      <div id="main-content">
        <slot />
      </div>
    </main>
    <RenovationFooter />
  </body>
</html>