---
// Import UnoCSS reset to ensure consistent styles across browsers
import '@unocss/reset/tailwind.css';
import 'uno.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
  type?: string;
}

const {
  title, 
  description = "Websites that do more - Matt Whitfield designs and builds custom websites for small businesses that get results.",
  image = "/images/matt-whitfield-rpf-on-set-2024-1200x1500.jpg",
  canonicalURL = Astro.url.href,
  type = "website"
} = Astro.props;

// Get current URL for canonical link
const currentUrl = Astro.url.href;

const navLinks = [
  { href: "/", text: "Home" },
  { href: "/about", text: "About" },
  { href: "/what-i-do", text: "The Work" },
  { href: "/blog", text: "Blog" },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#E25E3E" />
    <meta name="author" content="Matt Whitfield" />
    <meta name="robots" content="index, follow" />
    <title>{title}</title>
    
    <!-- Open Graph / Social Media Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={new URL(image, Astro.site || Astro.url.origin).href} />
    <meta property="og:site_name" content="Matt Whitfield" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter Card Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site || Astro.url.origin).href} />
    
    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json">
      {
        JSON.stringify({
          "@context": "https://schema.org",
          "@type": "WebSite",
          "name": "Matt Whitfield - Web Design & Development",
          "url": Astro.url.origin,
          "description": "Matt Whitfield designs and builds custom websites for small businesses that get results."
        })
      }
    </script>
    <style is:global>
      /* Additional global styles */
      html {
        font-family: 'Manrope', sans-serif;
        overflow-x: hidden; /* Prevent horizontal overflow */
        width: 100%;
        max-width: 100vw;
        scroll-behavior: smooth;
      }
      body {
        overflow-x: hidden; /* Prevent horizontal overflow */
        width: 100%;
        max-width: 100vw;
        line-height: 1.5;
      }
      
      /* Improve focus styles for accessibility */
      a:focus, button:focus, input:focus, textarea:focus, select:focus {
        outline: 3px solid #E25E3E;
        outline-offset: 2px;
      }
      
      /* Improve link contrast for accessibility */
      a {
        text-decoration-thickness: 2px;
        text-underline-offset: 2px;
      }
      
      /* Improve selection contrast */
      ::selection {
        background-color: #E25E3E;
        color: white;
      }
      
      /* Skip to content for accessibility */
      .skip-to-content {
        position: absolute;
        left: -9999px;
        top: auto;
        width: 1px;
        height: 1px;
        overflow: hidden;
      }
      
      .skip-to-content:focus {
        position: fixed;
        top: 0;
        left: 0;
        width: auto;
        height: auto;
        padding: 10px;
        border: 3px solid black;
        background: white;
        z-index: 9999;
        color: black;
        font-weight: bold;
      }
    </style>
  </head>
  <body class="font-sans min-h-screen bg-background text-text">
    <a href="#main-content" class="skip-to-content">Skip to content</a>
    <Header links={navLinks}/>
    <div id="main-content" class="pt-4">
      <slot />
    </div>
    
    <Footer/>
  </body>
</html>