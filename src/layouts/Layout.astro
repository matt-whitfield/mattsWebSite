---
// Import UnoCSS reset to ensure consistent styles across browsers
import '@unocss/reset/tailwind.css';
import 'uno.css';
import RenovationFooter from '../components/RenovationFooter.astro';
import SiteBanner from '../components/SiteBanner.astro';
import FloatingMenu from '../components/FloatingMenu.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
  type?: string;
}

const {
  title, 
  description = "Websites that do more - Matt Whitfield designs and builds custom websites for small businesses that get results.",
  image = "/images/matt-whitfield-rpf-on-set-2024-1200x1500.jpg",
  canonicalURL = Astro.url.href,
  type = "website"
} = Astro.props;

// Get current URL for canonical link
const currentUrl = Astro.url.href;

const navLinks = [
  { href: "/", text: "Home" },
  { href: "/about", text: "About" },
  { href: "/what-i-do", text: "The Work" },
  { href: "/blog", text: "Blog" },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="canonical" href="https://mattwhitfield.xyz" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#E25E3E" />
    <meta name="author" content="Matt Whitfield" />
    <meta name="robots" content="index, follow" />
    <title>{title}</title>
    
    <!-- Open Graph / Social Media Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={new URL(image, Astro.site || Astro.url.origin).href} />
    <meta property="og:site_name" content="Matt Whitfield" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter Card Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site || Astro.url.origin).href} />
    
    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Matt Whitfield - Web Design & Development",
        "url": "https://mattwhitfield.xyz",
        "description": "Matt Whitfield is a Portland-based web designer and creative building custom websites for small businesses want better online results.",
        "logo": "https://mattwhitfield.xyz/images/matt-logo-v8-black.webp",
        "potentialAction": {
          "@type": "ContactAction",
          "target": "https://mattwhitfield.xyz/contact",
          "name": "Contact Matt Whitfield"
        },
        "sameAs": [
          "https://www.linkedin.com/in/matt--whitfield/",
          "https://www.instagram.com/_mattwhitfield/",
          "https://www.youtube.com/@mattwhitfield6331",
          "https://github.com/matt-whitfield"
        ]
      })}
    </script>
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Matt Whitfield",
        "jobTitle": "Web Designer & Developer",
        "image": "https://mattwhitfield.xyz/images/matt-whitfield-bloomsday-2021-400x400.webp",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Portland",
          "addressRegion": "OR",
          "addressCountry": "US"
        },
        "areaServed": [
          "Portland, OR",
          "Walla Walla, WA"
        ],
        "url": "https://mattwhitfield.xyz",
        "sameAs": [
          "https://www.linkedin.com/in/matt--whitfield/",
          "https://www.instagram.com/_mattwhitfield/",
          "https://www.youtube.com/@mattwhitfield6331",
          "https://github.com/matt-whitfield"
        ],
        "knowsAbout": [
          "Web Design", "Web Development", "SEO", "Marketing", "Brand Strategy"
        ]
      })}
    </script>
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "ProfessionalService",
        "name": "Matt Whitfield - Web Design & Development",
        "image": "https://mattwhitfield.xyz/images/matt-whitfield-bloomsday-2021-400x400.webp",
        "logo": "https://mattwhitfield.xyz/images/matt-logo-v8-black.webp",
        "url": "https://mattwhitfield.xyz",
        "description": "Custom websites, web design, development, SEO, and marketing for small businesses in Portland, OR and Walla Walla, WA.",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Portland",
          "addressRegion": "OR",
          "addressCountry": "US"
        },
        "areaServed": [
          "Portland, OR",
          "Walla Walla, WA",
          "Vancouver, WA",
          "Beaverton, OR"
        ],
        "sameAs": [
          "https://www.linkedin.com/in/matt--whitfield/",
          "https://www.instagram.com/_mattwhitfield/",
          "https://www.youtube.com/@mattwhitfield6331",
          "https://github.com/matt-whitfield"
        ],
        "serviceType": [
          "Web Design",
