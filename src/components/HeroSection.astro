---
import ProfileBadge from './ProfileBadge.astro';
import StyledLink from './StyledLink.astro';
import ScrollArrow from './ScrollArrow.astro';

interface Props {
  title: string;
  description: string;
  quote?: string;
  ctaText?: string;
  ctaLink?: string;
  profileImage?: string;
}

const {
  title,
  description,
  quote,
  ctaText = "explore the work",
  ctaLink = "/blog",
  profileImage = "/images/matt-whitfield-rpf-on-set-2024-1200x1500.jpg"
} = Astro.props;
---

<div class="hero-section">
  <!-- Left column with h1 -->
  <div class="flex items-center justify-start pt-16 md:pt-0">
    <h1 class="hero-title-responsive !leading-[0.9]">{title}</h1>
  </div>
  
  <!-- Right column with paragraph, blockquote, and CTA -->
  <div class="flex flex-col justify-center">
    <ProfileBadge imagePath={profileImage} />
    <p class="neo-text text-lg mb-8 pr-4">{description}</p>
    {quote && (
      <blockquote class="neo-text italic text-lg font-medium mb-10 pr-4">{quote}</blockquote>
    )}
    <!-- Primary CTA Link -->
    <div class="flex items-start mt-6">
      <StyledLink href={ctaLink} variant="primary">{ctaText}</StyledLink>
    </div>
  </div>
  
  <!-- Scroll Arrow -->
  <ScrollArrow />
</div>