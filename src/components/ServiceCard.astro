---
// ServiceCard component that displays a card with an icon, title, and description
interface Props {
  icon: string;  // Icon class name (for example, using UnoCSS icon classes)
  title: string; // Service title
  description: string; // Service description
  color?: 'black' | 'primary' | 'mint' | 'coral' | 'blue' | 'purple' | 'lime' | 'highlight'; // Enhanced color options
}

const { icon, title, description, color = 'mint' } = Astro.props;
---

<div class="service-card group" data-color={color}>
  <div class="flex items-center mb-4">
    <!-- Neo Brutalist styled icon with border -->
    <div class="neo-icon-container">
      <div class={`${icon} w-6 h-6 icon-color-change`}></div>
    </div>
    <h3 class="neo-card-title ml-3">{title}</h3>
  </div>
  <p class="neo-text">{description}</p>
</div>

<style define:vars={{ cardColor: color }}>
  .service-card {
    background-color: white;
    padding: 1.5rem;
    border: 3px solid black;
    box-shadow: 4px 4px 0px 0px rgba(0,0,0,1);
    transition: all 0.3s ease;
  }
  
  /* Neo Brutalist icon container */
  .neo-icon-container {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid #1a1a1a;
    background-color: white;
    transition: all 0.3s ease;
  }
  
  /* Icon container color transitions on hover */
  .service-card[data-color="mint"]:hover .neo-icon-container {
    border-color: #5CECC6;
  }
  
  .service-card[data-color="coral"]:hover .neo-icon-container {
    border-color: #F15BB5;
  }
  
  .service-card[data-color="primary"]:hover .neo-icon-container {
    border-color: #FF6B35;
  }
  
  .service-card[data-color="blue"]:hover .neo-icon-container {
    border-color: #00BBF9;
  }
  
  .service-card[data-color="purple"]:hover .neo-icon-container {
    border-color: #9B5DE5;
  }
  
  .service-card[data-color="lime"]:hover .neo-icon-container {
    border-color: #BAFF29;
  }
  
  .service-card[data-color="highlight"]:hover .neo-icon-container {
    border-color: #FEE440;
  }
  
  /* Icon color transitions on hover */
  .service-card[data-color="mint"]:hover .icon-color-change {
    color: #5CECC6;
  }
  
  .service-card[data-color="coral"]:hover .icon-color-change {
    color: #F15BB5;
  }
  
  .service-card[data-color="primary"]:hover .icon-color-change {
    color: #FF6B35;
  }
  
  .service-card[data-color="blue"]:hover .icon-color-change {
    color: #00BBF9;
  }
  
  .service-card[data-color="purple"]:hover .icon-color-change {
    color: #9B5DE5;
  }
  
  .service-card[data-color="lime"]:hover .icon-color-change {
    color: #BAFF29;
  }
  
  .service-card[data-color="highlight"]:hover .icon-color-change {
    color: #FEE440;
  }
  
  .icon-color-change {
    transition: color 0.3s ease;
  }
</style>