---
// ServiceCard component that displays a card with an icon, title, and description with Neo-Brutalist styling
interface Props {
  icon: string;  // Icon class name (for example, using UnoCSS icon classes)
  title: string; // Service title
  description: string; // Service description
  color?: 'black' | 'primary' | 'mint' | 'coral' | 'blue' | 'purple' | 'lime' | 'highlight'; // Enhanced color options
}

const { icon, title, description, color = 'mint' } = Astro.props;

const cardClass = `neo-service-card-hover-${color}`;
const borderClass = `border-${color}`;
const bgClass = `bg-${color}`;
const iconHoverClass = `group-hover:icon-${color}`;

// Decorative element classes
const decoClass = `corner-spin ${bgClass} border-3 border-black transition-all duration-300`;
const decoRotateClass = 'group-hover:rotate-45';
---

<div class={`neo-card-base relative flex flex-col h-full group ${cardClass}`} data-color={color}>
  <!-- Decorative corner element -->
  <div class={`${decoClass} ${decoRotateClass}`}></div>
  <div class="p-6 flex-grow">
    <div class="flex items-start mb-4">
      <!-- Neo Brutalist styled icon without border -->
      <div class="neo-icon-container">
        <div class={`${icon} w-6 h-6 icon-color-change ${iconHoverClass}`}></div>
      </div>
      <h3 class="neo-heading text-xl ml-3 pt-2">{title}</h3>
    </div>
    <p class="neo-text">{description}</p>
  </div>
</div>

<!--
  All styling is now handled by UnoCSS shortcuts and theme.
  The only exception is the .neo-icon-container and .icon-color-change classes, which are now also in the design system.
-->