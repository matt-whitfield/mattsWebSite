---
// ServiceCard component with improved responsive design
interface Props {
  icon: string;  // Icon class name (for example, using UnoCSS icon classes)
  title: string; // Service title
  description: string; // Service description
  color?: 'black' | 'primary' | 'mint' | 'coral' | 'blue' | 'purple' | 'lime' | 'highlight'; // Enhanced color options
}

const { icon, title, description, color = 'mint' } = Astro.props;

const cardClass = `neo-service-card-hover-${color}`;
const bgClass = `bg-${color}`;

// Decorative element classes
const decoClass = `absolute -top-2 -right-2 w-6 h-6 ${bgClass} border-3 border-black transition-all duration-300`;
const decoRotateClass = 'group-hover:rotate-45';
---

<div class={`bg-white border-3 border-black shadow-neo relative h-full group transition-all duration-200 hover:shadow-neo-sm hover:translate-x-[2px] hover:translate-y-[2px] ${cardClass}`} data-color={color}>
  <!-- Decorative corner element -->
  <div class={`${decoClass} ${decoRotateClass}`}></div>
  
  <!-- Card Content -->
  <div class="p-4 md:p-6 h-full flex flex-col">
    <!-- Icon -->
    <div class="flex justify-center mb-4">
      <div class="w-12 h-12 flex items-center justify-center border-3 border-black bg-white transition-all duration-300 shadow-[3px_3px_0px_0px_rgba(0,0,0,1)]">
        <div class={`${icon} w-6 h-6 transition-colors duration-300 group-hover:text-${color}`}></div>
      </div>
    </div>
    
    <!-- Title -->
    <h3 class="neo-heading text-lg md:text-xl mb-3 text-center text-text">{title}</h3>
    
    <!-- Description -->
    <p class="neo-text text-sm md:text-base leading-relaxed text-center flex-grow">{description}</p>
  </div>
</div>