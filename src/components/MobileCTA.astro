---
import StyledLink from './StyledLink.astro';

interface Props {
  color: string;
  textColor: string;
}

const { color, textColor } = Astro.props;
---

<section class="xl:hidden w-full py-8 bg-white">
  <div class="page-container">
    <div class="max-w-4xl mx-auto">
      <div class="neo-card-base p-6">
        <div class="flex flex-col md:flex-row md:items-center gap-6">
          <div class="flex-1">
            <div class={`inline-block px-3 py-1 bg-${color} border-2 border-black ${textColor} font-bold text-sm uppercase mb-3`}>
              Need Help?
            </div>
            <h3 class="neo-card-title mb-2">Struggling with your website?</h3>
            <p class="neo-text text-sm mb-0">
              Book a free 30-minute consultation. No sales pitch, just a conversation.
            </p>
          </div>
          <div class="flex-shrink-0">
            <StyledLink href="/contact" variant="primary" size="sm">
              Book Free Consultation
            </StyledLink>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
