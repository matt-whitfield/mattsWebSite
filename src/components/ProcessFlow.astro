---
interface Props {
  steps: Array<{
    title: string;
    description: string;
  }>;
  color?: 'primary' | 'coral' | 'blue' | 'mint' | 'purple' | 'lime';
}

const {
  steps,
  color = 'lime'
} = Astro.props;

const textColor = color === 'mint' || color === 'lime' ? 'text-black' : 'text-white';
---

<div class="space-y-8">
  {steps.map((step, index) => (
    <div class="flex items-start space-x-6">
      <div class={`w-12 h-12 bg-${color} border-2 border-black flex items-center justify-center font-bold ${textColor} text-xl flex-shrink-0`}>
        {index + 1}
      </div>
      <div>
        <h3 class="font-bold text-xl mb-2 text-text">{step.title}</h3>
        <p class="neo-text text-lg">{step.description}</p>
      </div>
    </div>
  ))}
</div>