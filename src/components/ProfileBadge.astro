---
// ProfileBadge component that displays a circular image with inline text
interface Props {
  imagePath: string;
  name?: string;
}

const { imagePath, name = "Matt Whitfield" } = Astro.props;
---

<div class="flex items-center justify-start profile-badge-spacing px-4">
  <div class="flex items-center gap-3">
    <div class="w-7 h-7 rounded-full overflow-hidden">
      <img src={imagePath} alt={name} class="w-full h-full object-cover filter grayscale" />
    </div>
    <p class="text font-normal">{name}</p>
  </div>
</div>

<style>
  /* Ensures consistent black and white effect across browsers */
  img {
    -webkit-filter: grayscale(100%);
    filter: grayscale(100%);
  }
</style>